@{
    ViewData["Title"] = "Home Page";
}
<div class="container-fluid">
    <div class="content-box">
        <h2 class="mb-4" style="color: #a0a0ff;">SETUP TRAINING MODEL</h2>
        <hr />
        <div class="row g-3">
            <div class="col-lg-6">
                <form id="setupModelForm">
                    <div class="mb-3">
                        <label for="modelSearchInput" class="form-label">Cari Model</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="modelSearchInput" placeholder="Ketik nama model (min 6 karakter)..." autocomplete="off" />
                            <button type="button" class="btn btn-outline-secondary" id="btnClearSearch">Clear</button>
                            <span class="input-group-text bg-transparent border-0 p-0">
                                <span id="modelSearchSpinner" class="spinner-border spinner-border-sm text-light d-none" role="status" aria-hidden="true"></span>
                            </span>
                        </div>
                        <div class="form-text text-info">Ketik minimal 5 karakter untuk mencari.</div>
                    </div>

                    <div class="mb-3">
                        <label for="modelSelect" class="form-label">Select Model</label>
                        <select id="modelSelect" class="form-select" aria-label="Select Model" disabled>
                            <option value="">Ketik di kotak pencarian untuk mulai...</option>
                        </select>
                        <div id="modelFilterNote" class="form-text">
                            Hanya menampilkan model yang cocok untuk fine-tuning (bukan GGUF/LoRA/adapter/quantized).
                        </div>
                    </div>

                    <div id="modelSizeAlert" class="alert alert-warning d-none" role="alert">
                        Base Model AI yang kamu pilih lebih dari 7B, pastikan environment kamu memiliki GPU lebih dari 16Gb atau CPU 24 Core
                    </div>
                </form>
            </div>
            <div class="col-lg-6">
                <div id="modelInfoContainer">
                    <div class="card model-info-card bg-dark text-light border-0">
                        <div class="card-body">
                            <h5 class="card-title mb-2">Informasi Model</h5>
                            <p class="card-text text-secondary mb-0">Pilih model di sebelah kiri untuk melihat detailnya.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Toast container for user feedback -->
        <div class="position-fixed top-0 end-0 p-3" style="z-index: 1080;">
            <div id="liveToast" class="toast align-items-center text-bg-dark border-0" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body" id="toastBody">Siap.</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        </div>
    </div>
</div>
